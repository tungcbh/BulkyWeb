@model List<Product>
<div class="container">
    <div class="row pt-2 pb-2">
        <div class="col-6 text-decoration-line-through">
            Catergory List
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bookmark-plus"></i> Create New Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Author</td>
                    <td></td>
                    <td>
                        <div class="w-120 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id=@obj.Id class ="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id =@obj.Id class="btn btn-outline-danger mx-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>            
            }
        </tbody>
    </table>
</div>