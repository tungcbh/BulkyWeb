@model List<Product>
<div class="container">
    <div class="row pt-2 pb-2">
        <div class="col-6">
            Product List
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-bookmark-plus"></i> Create New Product
            </a>
        </div>
    </div>
    <table id="productTable" class="display table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>


</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}