@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <input asp-for="Id" hidden />
        <div class="form-floating py-2 col-12">
            <input asp-for="Title" disabled type="text" class="form-control " />
            <label asp-for="Title" class=" fs-3"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <textarea asp-for="Description" disabled type="text" class="form-control"></textarea>
            <label asp-for="Description" class=" fs-4"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="ISBN" disabled type="text" class="form-control" />
            <label asp-for="ISBN" class=" fs-4"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Author" disabled type="text" class="form-control" />
            <label asp-for="Author" class=" fs-4"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="ListPrice" disabled type="text" class="form-control" />
            <label asp-for="ListPrice" class=" fs-4"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price" disabled type="text" class="form-control" />
            <label asp-for="Price" class=" fs-4"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price50" disabled type="text" class="form-control" />
            <label asp-for="Price50" class=" fs-4"></label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price100" disabled type="text" class="form-control" />
            <label asp-for="Price100" class=" fs-4"></label>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete ?</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}